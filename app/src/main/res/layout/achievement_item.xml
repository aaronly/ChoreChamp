<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_achievement"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/achievement_list_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_achievement_incomplete"/>

    <TextView
        android:id="@+id/textView_achievement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/achievement_item_placeholder"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_achievement"
        app:layout_constraintLeft_toRightOf="@+id/image_achievement"
        app:layout_constraintTop_toTopOf="@+id/image_achievement"/>

</android.support.constraint.ConstraintLayout>